			$mail_corpo .= '</tr>';
			$mail_corpo .= '</table>';
			$mail_corpo .= 'Atenciosamente, <br>';
			$mail_corpo .= '<strong>Equipe CNSDATA</strong><br><br>';
			$mail_corpo .= 'P.S.: Este é um e-mail automático, por favor, não responda, é utilizado somente para envio.';

	// ----------------------------------------------------------------------------------
	$mail_copies = '';

	$mail_smtp	         = $mail_smtp_server;        	// SMTP server name or IP address
	$mail_user           = $mail_smtp_user;             // SMTP user name
	$mail_pass           = $mail_smtp_pass;             // SMTP password
	$mail_from           = $mail_from;             	    // From email
	$mail_para           = $mail_to;    				// To email -- VERIFICAR O EMAIL DA CONFIG DA VIEW 
	$mail_subject        = $mail_titulo;                // Message subject
	$mail_message        = $mail_corpo; 				// Message body
	$mail_format         = $mail_formato;   					  	// Message format: (T)ext or (H)tml
	$mail_copies         = $email_contato;    			// ENVIO DE COPIA
  //$mail_copies         = 'jose.flavio@globalblue.com.br';// ENVIO DE COPIA
    $mail_tp_copies      = '';   						// COPIAS
	$mail_port           = $mail_port;              	// Server port - 587
	$mail_tp_connection  = $mail_tp_connection;         // CONNECTION SECURITY (S) OR (N)

	// Send email";
	sc_mail_send($mail_smtp,
				 $mail_user,
				 $mail_pass,
				 $mail_from,
				 $mail_para,
				 $mail_subject,
				 $mail_message,
				 $mail_format,
				 $mail_copies,                        
				 $mail_tp_copies,   
				 $mail_port,
				 $mail_tp_connection);   

	if (!{sc_mail_ok}) {
	 sc_error_message("Erro ao tentar mandar o e-mail!");
	}	
sc_commit_trans();

